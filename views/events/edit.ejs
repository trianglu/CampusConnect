<%- include('../partials/header') %>

<div class="content">
  <h1>Edit Event</h1>

  <form method="POST" action="/events/<%= event._id %>?_method=POST" class="new-form">
    
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= event.title %>" required />

    <label for="category">Category</label>
    <select id="category" name="category" required>
      <option value="">Select a category</option>
      <option value="Tech" <%= event.category === 'Tech' ? 'selected' : '' %>>Tech</option>
      <option value="Wellness" <%= event.category === 'Wellness' ? 'selected' : '' %>>Wellness</option>
      <option value="Arts" <%= event.category === 'Arts' ? 'selected' : '' %>>Arts</option>
      <option value="Networking" <%= event.category === 'Networking' ? 'selected' : '' %>>Networking</option>
      <option value="Sports" <%= event.category === 'Sports' ? 'selected' : '' %>>Sports</option>
      <option value="Food" <%= event.category === 'Food' ? 'selected' : '' %>>Food</option>
      <option value="Music" <%= event.category === 'Music' ? 'selected' : '' %>>Music</option>
    </select>

    <label for="location">Location</label>
    <input type="text" id="location" name="location" value="<%= event.location %>">

    <label for="startDateTime">Start Time</label>
    <input type="datetime-local" id="startDateTime" name="startDateTime"
      value="<%= event.startDateTime.toISOString().slice(0,16) %>" required />

    <label for="endDateTime">End Time</label>
    <input type="datetime-local" id="endDateTime" name="endDateTime"
      value="<%= event.endDateTime.toISOString().slice(0,16) %>" required />

    <label for="details">Details</label>
    <textarea id="details" name="details" rows="5" class="fixed-width" required><%= event.details %></textarea>

    <label for="image">Image URL</label>
    <input type="file" id="image" name="image" value="<%= event.image %>" accept=".jpeg,.jpg,.png"/>

    <input type="submit" value="Update Event" />
  </form>
</div>

<%- include('../partials/footer') %>
